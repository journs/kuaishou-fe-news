{
  "name": "rss-tech-notifier",
  "version": "1.0.0",
  "description": "RSS 技术资讯推送工具",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "dev:server": "tsx src/server.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:server": "node dist/server.js",
    "start:api": "NODE_ENV=production node dist/server.js",
    "watch": "nodemon --watch src --ext ts --exec tsx src/index.ts",
    "watch:server": "nodemon --watch src --ext ts --exec tsx src/server.ts",
    "test:notify": "tsx scripts/test-notify.ts"
  },
  "keywords": ["rss", "dingtalk", "notifier"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "rss-parser": "^3.13.0",
    "fast-xml-parser": "^4.3.4",
    "axios": "^1.6.5",
    "js-yaml": "^4.1.0",
    "dotenv": "^16.4.1",
    "node-cron": "^3.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.11.5",
    "@types/js-yaml": "^4.0.9",
    "@types/node-cron": "^3.0.11",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "tsx": "^4.7.0",
    "nodemon": "^3.0.3"
  }
}

